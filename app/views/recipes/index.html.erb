<h1>Searching for - <%= params[:search] %></h1>

<% if @recipes.nil? %>

<p>No recipes found with relevant information... Sorry</p>

<% else %>
<table border="1">
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Social Rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
  <tr class=<%= cycle('even', 'odd') %>>
    <td><%= link_to(image_tag(recipe['image_url'], size: '100'), recipe['image_url']) %></td>
    <td><%= link_to(sanitize(recipe['title']), recipe['source_url']) %></td>
    <td><%= recipe['social_rank'].round %></td>
  </tr>
  <% end %>
</table>
<% end %>